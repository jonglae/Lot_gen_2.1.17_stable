<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/lottoballs"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:descendantFocusability="beforeDescendants"
	android:paddingLeft="15dp"
	android:paddingRight="15dp">

	<LinearLayout
		android:id="@+id/textball_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:baselineAligned="false"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/RBall1"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1" />

		<ImageView
			android:id="@+id/RBall2"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1" />

		<ImageView
			android:id="@+id/RBall3"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1" />

		<ImageView
			android:id="@+id/RBall4"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1" />

		<ImageView
			android:id="@+id/RBall5"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1" />

		<ImageView
			android:id="@+id/RBall6"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1" />

		<ImageView
			android:id="@+id/RBall7"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1" />

		<ImageView
			android:id="@+id/RBall8"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/Rball_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="7dp"
		android:orientation="horizontal"
		tools:ignore="DuplicateIds">

		<TextView
			android:id="@+id/Rtext1"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:shadowColor="@android:color/black"
			android:shadowDx="10"
			android:shadowDy="10"
			android:shadowRadius="10"
			android:textAlignment="center"
			android:textColor="@android:color/white"
			android:textSize="20sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/Rtext2"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:shadowColor="@android:color/black"
			android:shadowDx="10"
			android:shadowDy="10"
			android:shadowRadius="10"
			android:textAlignment="center"
			android:textColor="@android:color/white"
			android:textSize="20sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/Rtext3"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:shadowColor="@android:color/black"
			android:shadowDx="10"
			android:shadowDy="10"
			android:shadowRadius="10"
			android:textAlignment="center"
			android:textColor="@android:color/white"
			android:textSize="20sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/Rtext4"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:shadowColor="@android:color/black"
			android:shadowDx="10"
			android:shadowDy="10"
			android:shadowRadius="10"
			android:textAlignment="center"
			android:textColor="@android:color/white"
			android:textSize="20sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/Rtext5"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:shadowColor="@android:color/black"
			android:shadowDx="10"
			android:shadowDy="10"
			android:shadowRadius="10"
			android:textAlignment="center"
			android:textColor="@android:color/white"
			android:textSize="20sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/Rtext6"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:shadowColor="@android:color/black"
			android:shadowDx="10"
			android:shadowDy="10"
			android:shadowRadius="10"
			android:textAlignment="center"
			android:textColor="@android:color/white"
			android:textSize="20sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/Rtext7"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:shadowColor="@android:color/black"
			android:shadowDx="10"
			android:shadowDy="10"
			android:shadowRadius="10"
			android:textAlignment="center"
			android:textColor="@color/colorAccent"
			android:textSize="25sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/Rtext8"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:shadowColor="@android:color/black"
			android:shadowDx="10"
			android:shadowDy="10"
			android:shadowRadius="10"
			android:textAlignment="center"
			android:textColor="@android:color/white"
			android:textSize="20sp"
			android:textStyle="bold" />

	</LinearLayout>

</FrameLayout>
